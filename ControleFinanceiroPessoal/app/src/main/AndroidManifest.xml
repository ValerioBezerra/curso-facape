<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.facape.controlefinanceiropessoal" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.CategoriasActivity"
            android:label="@string/categorias" >
        </activity>
        <activity
            android:name=".activity.CadastroCategoriaActivity"
            android:label="@string/cadastro_categoria" >
        </activity>
        <activity
            android:name=".activity.LancamentosActivity"
            android:label="@string/lancamentos" >
        </activity>
        <activity
            android:name=".activity.CadastroLancamentoActivity"
            android:label="@string/cadastro_lancamento" >
        </activity>
    </application>

</manifest>
